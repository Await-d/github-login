# GitHub账号管理系统环境变量配置示例
# 复制此文件为 .env 并修改相应值

# 应用配置
NODE_ENV=production
PORT=3000

# 安全配置 - 生产环境必须修改！
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
ENCRYPTION_KEY=your-32-char-encryption-key-change-this

# 数据库配置 (可选，默认使用SQLite)
# DATABASE_PATH=/app/data/github-manager.db

# 时区设置
TZ=Asia/Shanghai

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# CORS配置 (生产环境建议设置具体域名)
# CORS_ORIGIN=https://yourdomain.com

# 会话配置
SESSION_MAX_AGE=86400000
SESSION_SECURE=true

# 速率限制配置
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW=900000